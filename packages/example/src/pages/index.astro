---
import AppLayout from '../layout/AppLayout.astro';
import { Heading, Container, Button } from '@coffic/cosy-ui';
import { AppConfig } from '../config/config.app';
import { LanguageUtil } from '@coffic/cosy-ui';

const lang = LanguageUtil.getCurrentLanguage(Astro);
---

<AppLayout
  showSidebar={false}
  py="5xl"
  title="Astro Visits Integration Example"
  description="This example demonstrates the astro-visits integration.">
  <Container background="accent/20" py="4xl" centered flex="col">
    <Heading level={1}>Astro Visits Integration Example</Heading>
    <p>This example demonstrates the astro-visits integration.</p>
    <p>
      Visitor information is being tracked and stored in the Cloudflare D1
      database.
    </p>
  </Container>
</AppLayout>
