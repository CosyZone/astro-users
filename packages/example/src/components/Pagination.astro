---
export interface Props {
    users: {
        pagination: {
            page: number;
            totalPages: number;
            total: number;
        };
    };
    limit: number;
    usernameFilter?: string;
    roleFilter?: string;
}

const { users, limit, usernameFilter, roleFilter } = Astro.props;
---

<!-- 分页 -->
<div class="pagination">
    {
        users.pagination.page > 1 && (
            <a
                href={`/admin?page=${users.pagination.page - 1}&limit=${limit}${usernameFilter ? `&username=${encodeURIComponent(usernameFilter)}` : ''}${roleFilter ? `&role=${encodeURIComponent(roleFilter)}` : ''}`}>
                ← 上一页
            </a>
        )
    }

    <span>
        第 {users.pagination.page} 页，共 {users.pagination.totalPages} 页
    </span>

    {
        users.pagination.page < users.pagination.totalPages && (
            <a
                href={`/admin?page=${users.pagination.page + 1}&limit=${limit}${usernameFilter ? `&username=${encodeURIComponent(usernameFilter)}` : ''}${roleFilter ? `&role=${encodeURIComponent(roleFilter)}` : ''}`}>
                下一页 →
            </a>
        )
    }
</div>

<style>
    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        margin-top: 20px;
    }

    .pagination a {
        padding: 8px 12px;
        background: #2563eb;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.2s;
    }

    .pagination a:hover {
        background: #1d4ed8;
    }

    .pagination a:disabled {
        background: #9ca3af;
        cursor: not-allowed;
    }
</style>
