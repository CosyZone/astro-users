---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeroSection from '@/widgets/HeroSection.astro';
import DesignPhilosophy from '@/widgets/DesignPhilosophy.astro';
import LiveDemo from '@/widgets/LiveDemo.astro';
import BuilderPattern from '@/widgets/BuilderPattern.astro';
import Showcase from '@/widgets/Showcase.astro';
import { Button, Hero } from '@coffic/cosy-ui';

export const prerender = true;

const { lang = 'zh-cn' } = Astro.params;

export const getStaticPaths = async () => {
    return [
        {
            params: { lang: 'zh-cn' },
        },
        {
            params: { lang: 'en' },
        },
    ];
};

interface Props {
    lang: string;
}
---

<BaseLayout
    title="Cosy UI 组件库"
    showSidebar={false}
    showTOC={false}
    isArticle={false}
    verticalPadding="4xl"
    mainLayout="column">
    <Hero
        title="Astro Users"
        description="快速实现用户系统"
        links={[{ text: '开始使用', href: `/${lang}/manuals/guide` }]}
    />
</BaseLayout>
