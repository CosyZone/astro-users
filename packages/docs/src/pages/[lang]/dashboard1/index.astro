---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Button, Text, Hero } from '@coffic/cosy-ui';

export const prerender = true;

const { lang = 'zh-cn' } = Astro.params;

export const getStaticPaths = async () => {
    return [
        {
            params: { lang: 'zh-cn' },
        },
        {
            params: { lang: 'en' },
        },
    ];
};

interface Props {
    lang: string;
}
---

<BaseLayout
    title="Cosy UI 组件库"
    showSidebar={false}
    showTOC={false}
    isArticle={false}
    verticalPadding="4xl"
    mainLayout="column">
    <Hero
        title="快速实现"
        description="使用 @coffic/astro-users 提供的路由页面来渲染用户管理"
        links={[{ text: '用户管理', href: '/users' }]}
    />
</BaseLayout>
